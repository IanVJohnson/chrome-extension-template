{
  "manifest_version": 2,
  "name": "Line Length",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "ll-icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["bookmarks"]
}
